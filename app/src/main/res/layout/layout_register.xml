<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.register.RegisterPage">

    <TextView
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Resgister"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="28sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        >

        <EditText
            android:id="@+id/edt_register_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:ems="10"
            android:hint=" Tên đăng nhập"
            android:paddingLeft="16dp"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/edt_register_password"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/border_edit_text"
            android:ems="10"
            android:hint=" Mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:layout_below="@id/edt_register_name"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edt_register_comfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:ems="10"
            android:hint=" Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:layout_below="@id/edt_register_password"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edt_register_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:ems="10"
            android:hint=" Tên "
            android:inputType="textEmailAddress"
            android:paddingLeft="16dp"
            android:layout_below="@id/edt_register_id"
            android:layout_marginTop="10dp"
            />

        <CheckBox
            android:id="@+id/cb_register_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi chấp nhận  điều khoản này"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="18sp"
            android:layout_below="@id/edt_register_comfirmPassword"
            android:layout_marginTop="10dp"
            />

        <Button
            android:clickable="true"
            android:id="@+id/btn_register"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_button"
            android:text="Đăng Ký"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_below="@id/cb_register_policy"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


</FrameLayout>